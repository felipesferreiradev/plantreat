  <%= render "shared/navbar" %>

<div class="container plant_show_container">

  <%= image_tag "plantreat_logo.png", :class => "plant_show_logo", style: "height:60px; width:60px"%>
  <h2><%= @plant.name %></h2>

    <%# carousel 2  %>
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://images.unsplash.com/photo-1509645470620-c9c349934693?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8cm91bmQlMjBjYWN0dXN8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60" class="d-block w-100 rounded" style="object-fit: cover; height: 250px">
      </div>
      <div class="carousel-item">
        <img src="https://images.unsplash.com/photo-1649368189040-bb4a9057c8b1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8cm91bmQlMjBjYWN0dXN8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60" class="d-block w-100 rounded" style="object-fit: cover; height: 250px">
      </div>
      <div class="carousel-item">
        <img src="https://images.unsplash.com/photo-1531326147730-97a422949bed?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTN8fHJvdW5kJTIwY2FjdHVzfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60" class="d-block w-100 rounded" style="object-fit: cover; height: 250px">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <div class="d-flex show_details_col">
    <div class="row">
      <div class="col show_type">
        <label style="font-size:small">Type</label>
        <p class="plant_show_label_content"> <%=@plant.plant_type%></p>
      </div>

      <div class="col show_size">
        <label style="font-size:small">Air purifying</label>
        <p class="plant_show_label_content" style="font-size:small"><%=@plant.air_purifying%></p>
      </div>

      <div class="col show_level">
        <label style="font-size:small">Pet_babe safe?</label>
        <p class="plant_show_label_content" style="font-size:small"><%=@plant.pet_babe_safe%></p>
      </div>
      <hr>
    <div>
        <%# <h3 class="mt-3" style="color: #725B39;">Description</h3> %>
        <p class="plant_show_p" style="color: #725B39"><%= @plant.description %></p>
    </div>
    <div class = "d-flex justify-content-center">
      <%= link_to "Add to my Garden", profile_path, class:"btn btn-primary mt-4 w-50" %>
    </div>
    </div>
  </div>
</div>
