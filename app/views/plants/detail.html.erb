<%= render "shared/navbar" %>

<div class="container plant_show_container">

  <%= image_tag "plantreat_logo.png", :class => "plant_show_logo", style: "height:60px; width:60px"%>
  <h2>Round Cactus</h2>

  <img class="w-100" src="https://images.unsplash.com/photo-1509645470620-c9c349934693?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8cm91bmQlMjBjYWN0dXN8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60" alt="First slide" style="height:200px; object-fit: cover">
    <%# show points %>
    <div>
        <h3 class="mt-3" style="color: #725B39;">150 points</h3>
    </div>

    <%#show treatment options  %>
    <div class="d-flex">
      <div class="row">
          <div class="col show_type">
        <label style="font-size:small; color: #9F927F">Type</label>
        <p class="plant_show_label_content">Outdoor</p>
        </div>

        <div class="col show_size">
        <label style="font-size:small; color: #9F927F">Size</label>
        <p class="plant_show_label_content">Medium</p>
        </div>

        <div class="col show_level">
        <label style="font-size:small; color: #9F927F">Level</label>
        <p class="plant_show_label_content">Easy</p>
        </div>

      </div>

    </div>

    <div class = "d-flex justify-content-center">
      <%= link_to 'Add to my garden', root_path, class:"btn btn-primary mt-3 w-50" %>
    </div>

</div>
