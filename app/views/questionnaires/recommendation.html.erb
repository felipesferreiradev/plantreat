
 <div class="bg_discover text-left container">
 <%# text-left %>
 <%= image_tag "plantreat_logo.png",:class => "img_discover"%>
 <h1 class="title_discover">Discover your plant</h1>
 <%# <input type="text" class="discover_search_bar" > %>
  <%= form_with url: recommendation_path, method: :get do %>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
 <img src="https://img.icons8.com/pastel-glyph/344/search--v2.png" class="search" alt="">
 <h2 class="subtitle_discover">Plant category</h2>

    <div class="cd-flex justify-content-center mt-3">
      <div class="row d-flex gap-3">
        <div class="col d-flex flex-column align-items-center">
            <img class="p-2" src="https://img.icons8.com/external-flaticons-flat-flat-icons/452/external-plant-plants-flaticons-flat-flat-icons-7.png" style="height:50px; object-fit: cover; background-color: #E9FFE3; border-radius: 10px">
            <p class="plant_detail_label_content mt-1">indoor</p>
        </div>

        <div class="col d-flex flex-column align-items-center">
            <img class="p-2" src="https://img.icons8.com/color-glass/452/growing-plant.png" style="height:50px; object-fit: cover; background-color: #E9FFE3; border-radius: 10px">
            <p class="plant_detail_label_content mt-1">outdoor</p>
        </div>

        <div class="col d-flex flex-column align-items-center">
            <img class="p-2" src="https://img.icons8.com/color-glass/452/home-office.png" style="height:50px; object-fit: cover; background-color: #E9FFE3; border-radius: 10px">
            <p class="plant_detail_label_content mt-1">office</p>
        </div>

        <div class="col d-flex flex-column align-items-center">
          <img class="p-2" src="https://img.icons8.com/color/344/medium-icons.png" style="height:50px; object-fit: cover; background-color: #E9FFE3; border-radius: 10px">
          <p class="plant_detail_label_content mt-1">other</p>
        </div>

      </div>
    </div>
      <h2 class="popular_plants">Popular plants</h2>
       <% @plants.each do |plant| %>
      <div class="img_label">
        <label class="bottom_label"><%=plant.plant_type%></label>
        <img src="https://images.unsplash.com/photo-1509937528035-ad76254b0356?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=724&q=80" class="plant_img" alt="">
        <label class="top_label"><%=plant.name%></label>
      </div>
      <% end %>
    </div>

</div>
  <%= render "shared/navbar"%>
