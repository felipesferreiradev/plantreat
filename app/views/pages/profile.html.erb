<%= render "shared/navbar" %>
<div class="container garden_container">
  <div class="d-flex justify-content-center m-9">
    <%= image_tag "avatar.png", style:"height: 80px; object-fit: cover; margin-top: 15px",id: "navbarDropdown", 'aria-haspopup': true, 'aria-expanded': false %>
  </div>
  <%# <%= image_tag "plantreat_logo.png", class:"garden_logo", style: "height:60px; width:60px"%>
  <p style="text-align:center; margin-top: 20px; font-weight: bold; font-size: 20px">Hi, <%= current_user.username %></p>
  <h5 style="margin-top: 20px; text-align:center">Your garden</h5>

  <%# cards %>

  <div class="d-flex justify-content-center mt-3">
    <div class="row d-flex gap-4">
      <% @plants.each do |plant| %>
        <div class="col card p-0" style="width: 9rem;">
          <div class="d-flex justify-content-center">
            <img src="https://images.unsplash.com/photo-1509645470620-c9c349934693?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8cm91bmQlMjBjYWN0dXN8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60" style="width:100%; object-fit: cover">
          </div>
          <div class="card-body text-center">
            <h5 class="card-title"><%= plant.name %></h5>
            <%= link_to "view", plant_game_path(plant), class:"btn btn-primary mt-0 w-80" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class= "d-flex align-items-center flex-column gap-3" style="margin-top:130px">
    <%= button_to "Edit profile", edit_user_registration_path, data: {turbo_method: :get}, method: :get, class: "nav-link btn btn-primary edit-profile-btn", style:"padding:6px 20px" %>
    <%= button_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, method: :delete, class: "nav-link btn btn-primary", style:"padding:6px 30px" %>
  </div>

</div>
